@model app.Model.ViewModel.User.EditUserViewModel
@{
    ViewData["Title"] = "View User";
}
@section script{
    <partial name="~/Views/Shared/_FormScriptsPartial.cshtml" />
}
<section class="content pt-2">
    <div class="container-fluid ">
        <div class="row ">
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">View User</h3>
                    </div>
                    <form asp-action="Edit" asp-antiforgery="true" id="frmCreate">
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input disabled=true asp-for="Email" type="text" class="form-control">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input disabled=true asp-for="Password" type="password" class="form-control">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input disabled=true asp-for="Name" type="text" class="form-control">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Surname"></label>
                                <input disabled=true asp-for="Surname" type="text" class="form-control">
                                <span asp-validation-for="Surname" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="StoreId"></label>
                                <select disabled=true asp-for="StoreId" class="form-control" asp-items="Model.CompanyList">
                                    <option value="">Select Company</option>
                                </select>
                                <span asp-validation-for="StoreId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EmployeeTypeId"></label>
                                <select disabled=true asp-for="EmployeeTypeId" class="form-control"
                                    asp-items="Model.EmployeeTypeList">
                                    <option value="">Select Empployee type</option>
                                </select>
                                <span asp-validation-for="EmployeeTypeId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryId"></label>
                                <select disabled=true asp-for="CategoryId" class="form-control" asp-items="Model.AgencyList">
                                    <option value="">Select agency</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Image))
                            {
                                <div class="form-group" id="delete-image-main">
                                    <label asp-for="ImageFile"></label>
                                    <img height="150" src="/upload/@Model.Image" />
                                </div>
                            }
                            <div class="form-group">
                                <label asp-for="ImageFile"></label>
                                <input disabled=true asp-for="ImageFile" type="file" class="form-control">
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                                <input type="hidden" asp-for="Image" />
                            </div>
                            <div class="form-group">
                                <label asp-for="SelectedUserRoleIds"></label> : <br />
                                <div style="margin-left: 25%;">
                                    @foreach (var role in Model.UserRoles)
                                    {
                                        <input disabled=true type="checkbox" name="SelectedUserRoleIds" value=@role.Value
                                        @if (Model.SelectedUserRoleIds.Contains(@role.Value))
                                        {
                                            <text> checked </text>
                                        }
                                        /> @role.Text
                                        <br />
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-right">
                            <a class="btn btn-default" href="/User">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
